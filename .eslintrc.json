{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "./node_modules/eslint/conf/eslint-recommended.js",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "quotes": ["error", "single"],
        "spaced-comment": ["error", "always"]
    }
}